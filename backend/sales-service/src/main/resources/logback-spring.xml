<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true">

    <!-- Nome da aplicação -->
    <springProperty scope="context" name="APP_NAME" source="spring.application.name"/>

    <!-- Pattern padrão -->
    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} %-5level [%thread] %logger{36} - %msg%n"/>

    <!-- ======================
         Console
         ====================== -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ======================
         Arquivo
         ====================== -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/${APP_NAME}.log</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/${APP_NAME}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>14</maxHistory>
        </rollingPolicy>

        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- ======================
         Loggers específicos
         ====================== -->

    <!-- ❌ Hibernate / SQL totalmente desligado -->
    <logger name="org.hibernate.SQL" level="OFF"/>
    <logger name="org.hibernate.type.descriptor.sql" level="OFF"/>
    <logger name="org.hibernate.orm.jdbc.bind" level="OFF"/>

    <!-- Spring JDBC -->
    <logger name="org.springframework.jdbc" level="OFF"/>

    <!-- AWS / SQS -->
    <logger name="io.awspring.cloud.sqs" level="INFO"/>
    <logger name="software.amazon.awssdk" level="WARN"/>

    <!-- Application (somente INFO+) -->
    <logger name="com.salesflow" level="INFO"/>

    <!-- ======================
         Root
         ====================== -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

</configuration>
